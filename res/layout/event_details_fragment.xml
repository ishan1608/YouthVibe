<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/event_details_fragment_container"
    android:background="@drawable/lightyback" >
    
    <ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    tools:context="com.gallery.MainActivity"
	    tools:ignore="MergeRootFrame" >
	    
	    <LinearLayout
	        android:orientation="vertical"
	        android:layout_height="wrap_content"
	        android:layout_width="match_parent" >
	        
	        <ImageView 
	          android:id="@+id/titlepic"
	          android:layout_width="wrap_content"
	          android:layout_height="0dp"
	          android:contentDescription="Logo at the top of the type of event"
	          android:src="@drawable/baselogo"
	          android:layout_weight="1"
	          android:layout_gravity="center_horizontal" />
	    
		    <LinearLayout
		        android:id="@+id/event_details_container"
				android:layout_height="wrap_content"
				android:layout_width="match_parent"
				android:baselineAligned="false"
				android:orientation="vertical"
				android:layout_weight="1"
				android:layout_gravity="center_horizontal"
				android:background="#AAAAAAAA"
				android:padding="10dp"
				android:layout_margin="10dp" >
				
		        <LinearLayout
		            android:id="@+id/description_heading"
		            style="@style/event_details_heading"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >

		            <TextView
			            android:text="Description"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:layout_gravity="center_horizontal"
			            style="@style/event_details_heading_text" />
		        </LinearLayout>
		        
		        <TextView
		            android:id="@+id/description_content"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textSize="15sp"
		            android:padding="10dp" />
		        
		        <LinearLayout
		            android:id="@+id/rules_heading"
		            style="@style/event_details_heading"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		            <TextView
			            android:text="Rules"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
			            android:layout_gravity="center_horizontal"
			            style="@style/event_details_heading_text" />
		        </LinearLayout>
		        
		        <TextView
		            android:id="@+id/rules_content"
		            android:layout_height="wrap_content"
		            android:layout_width="wrap_content"
		            style="@style/event_details_content" />
		        
		        <LinearLayout
		            android:id="@+id/specifications_heading"
		            style="@style/event_details_heading"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		            <TextView
			            android:text="Specification"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
						android:layout_gravity="center_horizontal"
						style="@style/event_details_heading_text" />
		        </LinearLayout>
		        
		        <TextView
		            android:id="@+id/specifications_content"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            style="@style/event_details_content" />
		        
		        <LinearLayout
		            android:id="@+id/judging_criteria_heading"
		            style="@style/event_details_heading"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		            <TextView
			            android:text="Judging Criteria"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
						android:layout_gravity="center_horizontal"
						style="@style/event_details_heading_text" />
		        </LinearLayout>
		        
		        <TextView
		            android:id="@+id/judging_criteria_content"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            style="@style/event_details_content" />
		        
		        <LinearLayout
		            android:id="@+id/contact_heading"
		            style="@style/event_details_heading"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content" >
		            <TextView
			            android:text="Contact"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_weight="1"
						android:layout_gravity="center_horizontal"
						style="@style/event_details_heading_text" />
		        </LinearLayout>
		        
		        <TextView
		            android:id="@+id/contact_content"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            style="@style/event_details_content" />
				
		        <Button
		            android:id="@+id/event_registration_button"  
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:paddingBottom="@dimen/activity_vertical_margin"
				    android:paddingLeft="@dimen/activity_horizontal_margin"
				    android:paddingRight="@dimen/activity_horizontal_margin"
				    android:paddingTop="@dimen/activity_vertical_margin"
				    android:background="#6040c2"
				    android:textSize="20sp"
				    android:text="Register"
				    android:textColor="#c0c0c0"
				    android:layout_weight="1"
					android:layout_gravity="center_horizontal"
					android:layout_marginTop="10dp" >
		         </Button>
		         
			</LinearLayout>
			
	    </LinearLayout>
	    
	</ScrollView>
	
</RelativeLayout>
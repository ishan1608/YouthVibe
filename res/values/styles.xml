<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="com_facebook_loginview_silver_style" parent="@android:style/Widget.Button">
        <item name="android:width">205dp</item>
        <item name="android:height">44dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4B5164</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="com_bist_facebook_logout_style" parent="@android:style/Widget.Button">
        <item name="android:width">205dp</item>
        <item name="android:height">44dp</item>
        <item name="android:background">@drawable/facebook_logout_normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#262832</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="event_details_heading">
        <item name="android:orientation">vertical</item>
        <item name="android:background">#AAAAAA</item>
    </style>
    <style name="event_details_heading_text">
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/com_facebook_usersettingsfragment_connected_text_color</item>
        <item name="android:padding">7dp</item>
    </style>
    <style name="event_details_content">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">15sp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>